    <%= t('.welcome_html', email: current_user.email) %> |
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
  </p>
<% else %>
  <%= link_to t('.registration'), new_user_registration_path %> |
  <%= link_to t('.login'), new_user_session_path %>
<% end %> 