<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render "shared/errors", resource: @test %>
      <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :title, {}, { class: "custom-select" } %>
      </div>
      <div class="form-group">
        <%= form.label :test_level %>
        <%= form.select :test_level, {}, {}, { class: "custom-select" } do %>
          <% TestsHelper::TEST_LEVEL.each do |c| %>
            <%= content_tag(:option, c.last, value: c.first) %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :test_title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :timer %>
        <%= form.number_field :timer, id: :test_timer, min: 0, class: "form-control col-2" %> 
        <small class="text-muted"> <%= t("minutes") %> </small>
      </div>
      <div class="actions">
        <%= form.submit t("buttons.save"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
