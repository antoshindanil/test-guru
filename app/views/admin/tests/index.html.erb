<div class="row mx-0">
  <div class="container mt-5">
    <h1 class="mb-2"> <%= t("tests.index.header") %> </h1>
    <%= render "shared/errors", resource: @test %>
    <%= link_to "Create new test",  new_admin_test_path(@test), class: "btn btn-primary mb-4"%>
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon "arrow-up", class: "text-success hide" %>
            <%= octicon "arrow-down", class: "text-success hide" %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.category') %></th>
          <th><%= t('.author') %></th>
          <th><%= t('.count') %></th>
          <th class="text-center col-4" colspan="3" ><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "test" %>
      </tbody>
    </table>
  </div>
</div>
