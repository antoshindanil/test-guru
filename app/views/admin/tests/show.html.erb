<div class="row mx-0">
  <div class="container mt-5">
    <h1 class="mb-4"> <%= @test.title %> </h1>
    <%= link_to t('.new_question'), new_admin_test_question_path(@test),class: "btn btn-primary mb-3"  %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Question</th>
          <th class="text-center col-3" colspan="3" ><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "question" %>
      </tbody>
    </table>
    <div class="mx-autos mt-4">
      <%= link_to t('.back'), admin_tests_path, class: "btn btn-secondary" %>
      <%= link_to t('.edit'), edit_admin_test_path(@test), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
