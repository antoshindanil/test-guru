<div class="row mx-0">
  <div class="container mt-5">
    <h1><%= t('.header') %></h1>
    <%= link_to t('buttons.new'), new_admin_badge_path, class: 'btn btn-primary mb-3' %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('.title') %></th>
          <th><%= t('.image') %></th>
          <th><%= t('.rule') %></th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
    </table>
  </div>
</div>
